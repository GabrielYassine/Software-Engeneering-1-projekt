<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="dtu.app.ui.pages.EmployeeLogInfoController" alignment="CENTER" spacing="30">
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label fx:id="projectIDLabel" text="Project ID: " style="-fx-font-size: 20px;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="projectIDValue" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label fx:id="activityNameLabel" text="Activity Name: " style="-fx-font-size: 20px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="activityNameValue" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label fx:id="activityHoursValue" text="Hours: " style="-fx-font-size: 20px;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="hoursTextField" maxWidth="75" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save Changes" onAction="#saveChanges" />
        <Button text="Cancel" onAction="#cancelEdit" />
    </HBox>
</VBox>