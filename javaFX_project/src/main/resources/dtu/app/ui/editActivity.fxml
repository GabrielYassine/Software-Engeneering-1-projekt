<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.app.ui.pages.EditActivityController" spacing="20" alignment="CENTER">
    <children>
        <Label text="Edit Activity" style="-fx-font-size: 20;" />
        <HBox alignment="CENTER" spacing="20">
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Activity Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="activityNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Budget Hours:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="budgetHoursField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Start Week:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="startWeekField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="End Week:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="endWeekField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Start Year:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="startYearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="End Year:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="endYearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <ListView fx:id="employeesListView" minHeight ="100" maxHeight="100"/>
            <VBox spacing="10">
                <Button text="Add" onAction="#addEmployee" />
                <Button text="Remove" onAction="#removeEmployee" />
            </VBox>
            <ListView fx:id="selectedEmployeesListView" minHeight ="100" maxHeight="100"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Save Changes" onAction="#saveChanges" />
            <Button text="Cancel" onAction="#cancelEdit" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>