<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.app.ui.pages.FixedActivityInfoController">
    <children>
        <HBox>
            <fx:include source="backButton.fxml"/>
        </HBox>
        <TableView fx:id="fixedActivityTableView">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name">
                    <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="startWeekColumn" text="Start Week">
                    <cellValueFactory><PropertyValueFactory property="startWeek"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="endWeekColumn" text="End Week">
                    <cellValueFactory><PropertyValueFactory property="endWeek"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="startYearColumn" text="Start Year">
                    <cellValueFactory><PropertyValueFactory property="startYear"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="endYearColumn" text="End Year">
                    <cellValueFactory><PropertyValueFactory property="endYear"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Label text= "Create FixedActivity" style="-fx-font-size: 15;" />
        <Label text="Activity Name:"/>
        <TextField fx:id="activityNameField" maxWidth="200"/>
        <HBox alignment="CENTER" spacing="20">
            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <Label text="Start Week: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="startWeekField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="End Week: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="endWeekField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <Label text="Start Year: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="startYearField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="End Year: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="endYearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
        </HBox>
        <Button text="Create Activity" onAction="#createFixedActivity" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>