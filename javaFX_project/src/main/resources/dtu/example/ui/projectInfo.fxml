<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.example.ui.pages.ProjectInfoController">
    <children>
        <fx:include source="backButton.fxml"/>

        <TableView fx:id="activityTableView" minHeight="150">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name">
                    <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <HBox spacing="10">
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Activity Name:" />
                    <TextField fx:id="activityNameField" maxWidth="100.0" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Budget Hours:" />
                    <TextField fx:id="budgetHoursField" maxWidth="100.0" />
                </HBox>

            </VBox>
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Start Week:" />
                    <TextField fx:id="startWeekField" maxWidth="100.0" />
                </HBox>
                <HBox spacing="10">
                    <Label text="End Week:" />
                    <TextField fx:id="endWeekField" maxWidth="100.0" />
                </HBox>
            </VBox>
        </HBox>

        <Button text="Create Activity" onAction="#createActivity" />
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>