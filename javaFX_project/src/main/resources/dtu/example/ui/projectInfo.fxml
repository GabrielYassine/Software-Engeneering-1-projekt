<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.example.ui.pages.ProjectInfoController">
    <children>
        <HBox alignment="CENTER" spacing="20.0">
            <HBox>
                <fx:include source="backButton.fxml"/>
            </HBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label fx:id="projectNameValue" style="-fx-font-size: 20;" />
                <Label fx:id="projectLeaderValue" style="-fx-font-size: 15;" />
            </VBox>
            <HBox alignment="TOP_RIGHT">
                <Button fx:id="editButton" text="Edit Project" onAction="#editProject" />
            </HBox>
        </HBox>
        <TableView fx:id="activityTableView" minHeight="150">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name">
                    <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Label text= "Create Activity" style="-fx-font-size: 15;" />
        <HBox spacing="20">
            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <Label text="Activity Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="activityNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Budget Hours:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="budgetHoursField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Start Week: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="startWeekField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="End Week: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="endWeekField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
            <ListView fx:id="employeesListView" minHeight ="100" maxWidth="100" maxHeight="100"/>
            <VBox spacing="10">
                <Button text="Add" onAction="#addEmployee" />
                <Button text="Remove" onAction="#removeEmployee" />
            </VBox>
            <ListView fx:id="selectedEmployeesListView" minHeight ="100" maxWidth="100" maxHeight="100"/>
        </HBox>


        <Button text="Create Activity" onAction="#createActivity" />
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>