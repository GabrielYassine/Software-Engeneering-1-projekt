<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.example.ui.pages.ActivityInfoController">
    <children>
        <fx:include source="backButton.fxml"/>
        <VBox alignment="CENTER" spacing="20.0">
            <Label fx:id="activityNameLabel" style="-fx-font-size: 40;" />
            <Label fx:id="startWeekLabel" />
            <Label fx:id="endWeekLabel" />
            <Label fx:id="budgetHoursLabel" />
            <Label text="Register hours" style="-fx-font-size: 30;" />
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="initialsField" promptText="Initials" />
                <TextField fx:id="hoursField" promptText="Hours" />
                <DatePicker fx:id="datePicker" />
            </HBox>
            <Button text="Register Hours" onAction="#registerHours" />
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>