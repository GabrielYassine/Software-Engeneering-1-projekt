<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.example.ui.pages.ProjectsController">
    <children>
        <fx:include source="backButton.fxml"/>
        <TableView fx:id="projectsTableView" minHeight="150">
            <columns>
                <TableColumn fx:id="idColumn" text="ID">
                    <cellValueFactory><PropertyValueFactory property="ID"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="nameColumn" text="Name">
                    <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <HBox spacing="10">
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Project Name:" />
                    <TextField fx:id="projectNameField" maxWidth="100.0" />
                </HBox>
                <HBox spacing="10" >
                    <Label text="Assign employees: " />
                    <ComboBox fx:id="employeesComboBox" maxWidth="100" />
                </HBox>
                <Button fx:id="addEmployeeButton" text="Add Employee" layoutX="200" />
            </VBox>
            <ListView fx:id="selectedEmployeesListView" minHeight ="100" maxWidth="100" maxHeight="100"/>
            <VBox spacing="10">
                <Button fx:id="removeEmployeeButton" text="Remove Employee" minWidth="120"/>
            </VBox>
        </HBox>

        <Button text="Create Project" onAction="#createProject" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>